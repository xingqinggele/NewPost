<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/cooper_top_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/me_line_bg"
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cooper_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff333333"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合作方数"
                    android:textColor="#ff4e4e4e"
                    android:textSize="15sp"
                    />


            </LinearLayout>
            <View
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#E5E5E5"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/cooper_tv_directly_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff333333"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直属合作方数量"
                    android:textColor="#ff4e4e4e"
                    android:textSize="15sp"
                    />


            </LinearLayout>
            <View
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#E5E5E5"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cooper_tv_merchants_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1666"
                    android:textColor="#ff333333"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户数量"
                    android:textColor="#ff4e4e4e"
                    android:textSize="15sp"
                    />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_below="@+id/main_me_line1"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/me_line_bg"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <TextView
            android:id="@+id/cooper_tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李**"
            android:textColor="#ff333333"
            android:textSize="24sp" />

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cooper_tv_phone_number"
            app:layout_constraintLeft_toLeftOf="@+id/cooper_tv_name"
            app:layout_constraintTop_toBottomOf="@+id/cooper_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="155****8966"
            android:textColor="#ff333333"
            android:textSize="19sp"
            />
        
        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/cooper_tv_name"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/cooper_tv_name"
            app:layout_constraintLeft_toRightOf="@+id/cooper_tv_name"
            android:src="@mipmap/cooper_tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="70dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cooper_tv_name"
            app:layout_constraintTop_toTopOf="@+id/cooper_tv_name"
            android:src="@mipmap/cooper_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/cooper_tv_phone_number"
            app:layout_constraintTop_toTopOf="@+id/cooper_tv_phone_number"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有困难找推荐人"
            android:textColor="#ff8b8b8b"
            android:textSize="13sp"
            />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/me_line_bg"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:src="@mipmap/cooper_tv_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="7dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/cooper_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合作方管理"
                android:textColor="#ff4e4e4e"
                android:textSize="18sp"
                />


        </LinearLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#E5E5E5"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/cooper_fragment_expand"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:src="@mipmap/cooper_tv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="7dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/cooper_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合作方拓展"
                android:textColor="#ff4e4e4e"
                android:textSize="18sp"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>