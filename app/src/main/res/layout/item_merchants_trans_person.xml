<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_home_line_bg"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        fresco:roundedCornerRadius="180dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/merchant_person_logo"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
    />

    <TextView
        android:id="@+id/merchat_person_name"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/merchant_person_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李婉婉"
        android:textColor="#ff333333"
        android:textSize="17sp"
        />

    <View
        android:layout_marginLeft="10dp"
        android:id="@+id/merchats_person_view"
        android:background="#DCDCDC"
        app:layout_constraintLeft_toRightOf="@+id/merchat_person_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="1dp"
        android:layout_height="16dp"/>

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/merchants_traperson_phone"
        android:id="@+id/merchats_person_phone"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/merchats_person_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="159****1234"
        android:textColor="#ff333333"
        android:textSize="13sp"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/merchats_person_phone"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/merchants_transfer_person_text_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="划拨给TA"
        android:textColor="#ff0d5482"
        android:textSize="12sp"
        />

</android.support.constraint.ConstraintLayout>