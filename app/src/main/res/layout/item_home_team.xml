<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/main_home_line_bg">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_team_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="18dp"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="focusCrop"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="180dp" />

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="李婉婉"
        android:textColor="#ff333333"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_logo"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />

    <View
        android:id="@+id/home_team_view"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_name"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />

    <TextView
        android:id="@+id/home_team_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="5dp"
        android:text="159****1234"
        android:textColor="#ff333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toRightOf="@+id/home_team_view"
        app:layout_constraintTop_toTopOf="@+id/home_team_logo" />


    <View
        android:id="@+id/home_team_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_logo"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_name"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/home_team_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/hoem_team_turnover"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="团队交易额"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_view1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_view1" />

    <TextView
        android:id="@+id/home_team_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="880.00元"
        android:textColor="#ff0d5482"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv1"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv1"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv1" />

    <TextView
        android:id="@+id/home_team_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@mipmap/home_team_activation"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="团队激活数"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/home_team_tv1"
        app:layout_constraintTop_toBottomOf="@+id/home_team_tv_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="6户"
        android:textColor="#ff0d5482"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv2"
        app:layout_constraintLeft_toRightOf="@+id/home_team_tv2"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:background="@drawable/merchants_transfer_person_text_bg"
        android:text="查看详情"
        android:textColor="#ff0d5482"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_team_tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_team_tv2" />

</android.support.constraint.ConstraintLayout>