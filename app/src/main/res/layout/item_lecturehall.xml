<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_home_line_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.facebook.drawee.view.SimpleDraweeView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="13dp"
        android:id="@+id/lecturehall_img"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="90dp"
        android:layout_height="68dp"/>

    <TextView
        android:id="@+id/lecturehall_title"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@+id/lecturehall_img"
        app:layout_constraintLeft_toRightOf="@+id/lecturehall_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于商户管理"
        android:textColor="#ff4b4b4b"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/lecturehall_context"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/lecturehall_title"
        app:layout_constraintTop_toBottomOf="@+id/lecturehall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您于20201110的交易分润日报已成"
        android:textColor="#ff7e7e7e"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/lecturehall_time"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/lecturehall_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-10-24"
        android:textColor="#ff9f9f9f"
        android:textSize="11sp"
        />

    <View
        android:background="#E5E5E5"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>