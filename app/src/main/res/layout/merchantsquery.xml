<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3F3F3">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/merchants_query_title" />

            <RelativeLayout
                android:id="@+id/merchant_squery_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:padding="5dp"
                        android:src="@mipmap/back_left" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_toRightOf="@+id/iv_back"
                    android:text="终端查询"
                    android:textColor="@color/post_while"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <EditText
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/merchants_query_ed_search"
                android:textColor="#3096D9"
                android:textSize="15sp"
                android:hint="请输入商户名称、商户编号"
                android:paddingLeft="20dp"
                android:background="@drawable/merchantsquery_ed_bg"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/merchant_squery_relative"
                android:layout_width="match_parent"
                android:layout_height="33dp"/>

            <LinearLayout
                android:layout_marginTop="21dp"
                android:layout_marginLeft="38dp"
                android:layout_below="@+id/merchants_query_ed_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1919"
                    android:textColor="#ffffffff"
                    android:textSize="23sp"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/merchantsquery_ln_screening"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/merchants_query_ed_search"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/screening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />

            </LinearLayout>


        </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout

        android:layout_marginTop="170dp"
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>