<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_home_line_bg"
    android:layout_marginBottom="13dp">


    <TextView
        android:layout_marginTop="26dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/system_message_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增商户填写注意事项"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/system_message_list_item_context"
        app:layout_constraintLeft_toLeftOf="@+id/system_message_list_item_title"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/system_message_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、身份证末尾X需要大写\n2、注册人姓名或注册商户名称中间带特殊符号..."
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        />

    <View
        android:id="@+id/system_message_list_item_view"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/system_message_list_item_context"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:id="@+id/system_message_list_item_time"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/system_message_list_item_context"
        app:layout_constraintTop_toBottomOf="@+id/system_message_list_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-10-26"
        android:textColor="#ff7e7e7e"
        android:textSize="12sp"
        />

    <TextView
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/system_message_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情 >>"
        android:textColor="#ffff742f"
        android:textSize="15sp"
        />


</android.support.constraint.ConstraintLayout>