<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@mipmap/merchantsdetailsub_title"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_left" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/merchantsdetailfauiler_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抱歉，您的资料审核未通过！"
        android:textColor="#ff353535"
        android:textSize="16sp"
        />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可以补充或更改信息，再次提交申请。"
        android:textColor="#ff999999"
        android:textSize="13sp"
        />

    <Button
        android:id="@+id/merchats_detail_failure_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/merchants_detail_failure_btn_bg"
        android:text="修改信息"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>