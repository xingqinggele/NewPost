<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_home_line_bg"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/query_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="状态"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/query_img"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/query_state"
        app:layout_constraintTop_toBottomOf="@+id/query_state"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/query_tv_name"
        android:text="POS机名称：魔方"
        app:layout_constraintLeft_toRightOf="@+id/query_img"
        app:layout_constraintTop_toTopOf="@+id/query_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/query_tv_type"
        android:text="活动类型：传统POS刷够返活动"
        app:layout_constraintLeft_toLeftOf="@+id/query_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/query_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:background="#E5E5E5"
        android:id="@+id/query_view"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/query_tv_detail"
        app:layout_constraintTop_toTopOf="@+id/query_tv_detail"
        android:id="@+id/query_tv_number"
        android:text="序列号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/query_tv_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/merchants_transfer_person_text_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query_view"
        android:text="详情查询"
        android:textColor="#ff0d5482"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>