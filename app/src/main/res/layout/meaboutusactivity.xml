<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#F3F3F3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/me_change_password_top_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:padding="5dp"
                    android:src="@mipmap/back_left" />

            </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="@color/post_while"
                android:textSize="18sp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/me_change_password_line1"
        android:background="@drawable/main_home_line_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="#186090"
                android:layout_width="4dp"
                android:layout_height="16dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件信息"
                android:textColor="#ff333333"
                android:textSize="17sp"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闯业客户端（Android）"
            android:textColor="#ff272727"
            android:textSize="15sp"
            />

        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本：1.0.5"
            android:textColor="#ff272727"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:background="@drawable/main_home_line_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="#186090"
                android:layout_width="4dp"
                android:layout_height="16dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务信息"
                android:textColor="#ff333333"
                android:textSize="17sp"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇拓客隐私政策"
            android:textColor="#ffff5c95"
            android:textSize="15sp"
            />

        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇拓客服务协议"
            android:textColor="#ffff5c95"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>