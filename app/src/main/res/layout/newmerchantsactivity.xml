<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3">

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/newmerchants_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/back_lift_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="21dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择新增商户类型"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />


    <RelativeLayout
        android:id="@+id/new_merchants_rela_my1"
        android:orientation="vertical"
        android:background="@drawable/main_home_line_bg"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入网声明"
            android:textColor="#ff4e4e4e"
            android:textSize="17sp"
            />

        <TextView
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为保证入网商户可以快速、正常的通过审核，请确保在填写商户信息过程中提供真实有效的商户信息"
            android:textColor="#ff727272"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/new_merchants_rela_my1"
        android:orientation="vertical"
        android:id="@+id/new_merchants_small"
        android:background="@drawable/main_home_line_bg"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="87dp">


        <ImageView
            android:id="@+id/new_merchants_img_my1"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/newmerchants_smail"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/new_merchants_img_my1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小微商户"
            android:textColor="#ff4e4e4e"
            android:textSize="17sp"
            />

            <ImageView
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/main_fragment2_riht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/new_merchants_small"
        android:orientation="vertical"
        android:id="@+id/new_merchants_big"
        android:background="@drawable/main_home_line_bg"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="87dp">


        <ImageView
            android:id="@+id/new_merchants_img_my2"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/newmerchants_big"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/new_merchants_img_my2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业商户"
            android:textColor="#ff4e4e4e"
            android:textSize="17sp"
            />

        <ImageView
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/main_fragment2_riht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>