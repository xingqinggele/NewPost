<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/merchant_detail_top_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:padding="5dp"
                    android:src="@mipmap/back_left" />

            </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增小微商户填写信息"
                android:textColor="@color/post_while"
                android:textSize="18sp"
                />

        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/merchants_detail2_iv_my1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/merchant_detail2_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="55dp"
                android:layout_below="@+id/merchants_detail2_iv_my1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/merchants_detail2_tv1"
                android:layout_marginRight="55dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/merchants_detail2_iv_my1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业信息"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />

            <LinearLayout
                android:id="@+id/merchant_detail2_line1"
                android:background="@drawable/main_home_line_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/merchants_detail2_tv1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:background="#186090"
                        android:layout_width="1dp"
                        android:layout_height="11dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="27dp"
                        android:id="@+id/merchants_detail2_tv2"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法人身份证上传"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv2"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/merchants_detail2_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请上传您的结算卡照"
                        android:textColor="#ff858585"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv3"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        fresco:placeholderImage="@mipmap/merchant_detail_bank_car"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/merchant_detail2_bank"
                        android:scaleType="fitXY"
                        android:layout_width="151dp"
                        android:layout_height="103dp"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/merchant_detail2_line2"
                android:background="@drawable/main_home_line_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/merchant_detail2_line1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail2_tv4"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算卡号"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_datail2_tv4"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv4"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/merchant_detail2_number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入卡号"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_datail2_tv4"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail2_tv5"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户行"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail2_tv6"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv5"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:textColor="#4C4C4C"
                        android:gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/merchants_detail2_tv6"
                        android:hint="请选择开户行"
                        android:id="@+id/merchant_detail_address"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/merchant_detail2_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/merchant_detail2_iv1"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/me_back_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail2_tv7"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户城市"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail2_tv8"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv7"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/merchant_detail_city"
                        android:textColor="#4C4C4C"
                        android:gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_detail2_tv8"
                        android:hint="请选择城市"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/merchant_detail2_iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/merchant_detail2_iv2"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/me_back_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail2_tv9"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行预留手机号"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail2_tv10"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv9"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/merchants_detail2_reserved_phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入手机号"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_detail2_tv10"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/merchant_detail2_line3"
                android:background="@drawable/main_home_line_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/merchant_detail2_line2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail2_tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商户手机号（用作商户查看交易时的登录账户）"
                        android:textColor="#ff4c4c4c"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/merchants_detail2_tv12"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail2_tv11"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                    <EditText
                        android:id="@+id/merchants_detail2_phone"
                        android:layout_marginLeft="12dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入手机号"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>


                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/merchant_detail2_et_bg"
                        android:layout_toLeftOf="@+id/merchant_detail2_verification_code"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入手机号"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                    <TextView
                        android:background="@drawable/merchant_detail2_tv_bg"
                        android:id="@+id/merchant_detail2_verification_code"
                        android:layout_marginRight="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:textColor="#ff4c4c4c"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/merchant_detail_submit"
                android:background="#186090"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/merchant_detail2_line3"
                android:layout_alignParentBottom="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="提交"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>