<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/merchant_detail_top_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:padding="5dp"
                    android:src="@mipmap/back_left" />

            </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增小微商户填写信息"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />

        </RelativeLayout>




    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/merchants_detail_iv_my1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/merchant_detail_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="55dp"
                android:layout_below="@+id/merchants_detail_iv_my1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/merchants_detail_tv1"
                android:layout_marginRight="55dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/merchants_detail_iv_my1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业信息"
                android:textColor="#80aec6"
                android:textSize="12sp"
                />
            <LinearLayout
                android:id="@+id/merchant_detail_line1"
                android:background="@drawable/main_home_line_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/merchants_detail_tv1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_centerVertical="true"
                        android:background="#186090"
                        android:layout_width="1dp"
                        android:layout_height="11dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="27dp"
                        android:id="@+id/merchants_detail_tv2"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法人身份证上传"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv2"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/merchants_detail_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="①上传法人身份证正面"
                        android:textColor="#ff858585"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv3"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        fresco:placeholderImage="@mipmap/merchant_detail_car1"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/merchant_detail_card_is"
                        android:scaleType="fitXY"
                        android:layout_width="151dp"
                        android:layout_height="103dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/merchants_detail_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="②上传法人身份证背面"
                        android:textColor="#ff858585"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv4"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        fresco:placeholderImage="@mipmap/merchant_detail_car2"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/merchant_detail_card_the"
                        android:scaleType="fitXY"
                        android:layout_width="151dp"
                        android:layout_height="103dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/merchants_detail_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="③商户手持身份证照上传"
                        android:textColor="#ff858585"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv5"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        fresco:placeholderImage="@mipmap/merchant_detail_take_car"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/merchant_detail_take_card"
                        android:scaleType="fitXY"
                        android:layout_width="151dp"
                        android:layout_height="103dp"/>

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/merchant_detail_line2"
                android:background="@drawable/main_home_line_bg"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/merchant_detail_line1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv6"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv7"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv6"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:textColor="#000000"
                        android:id="@+id/merchant_detail_name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入姓名"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv7"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv8"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv9"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv8"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:textColor="#000000"
                        android:id="@+id/merchant_detail_card_number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="12dp"
                        android:gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入身份证号"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv9"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv10"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证有效期"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv11"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv10"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:textColor="#000000"
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv11"
                        android:hint="请选择身份证有效期"
                        android:id="@+id/merchant_detail_card_year"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/merchant_detail_iv_my0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/merchant_detail_iv_my0"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/me_back_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv12"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商铺地址"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv13"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv12"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv13"
                        android:hint="请选择商铺地址"
                        android:id="@+id/merchant_detail_address"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/merchant_detail_iv_my2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#000000"
                        />

                    <ImageView
                        android:id="@+id/merchant_detail_iv_my2"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/me_back_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv14"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商户详细地址"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv15"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv14"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:textColor="#000000"
                        android:id="@+id/merchant_details_address_detail"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="11dp"
                        android:gravity="center_vertical|right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="12sp"
                        android:hint="请输入商铺详细地址"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv15"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
                <View
                    android:background="#F3F3F3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/merchants_detail_tv16"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业范围"
                        android:textColor="#4C4C4C"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/merchants_detail_tv17"
                        android:textColor="#F80C0C"
                        android:layout_toRightOf="@+id/merchants_detail_tv16"
                        android:layout_centerVertical="true"
                        android:text="*"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:hint="请选择营业范围"
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/merchants_detail_tv17"
                        android:id="@+id/merchant_detail_type"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/merchant_detail_iv_my1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/merchant_detail_iv_my1"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/me_back_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/merchant_detail_audit"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/txy_red"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/merchant_detail_line2"
                android:text="*审核失败"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/merchant_detail_submit"
                android:background="#186090"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/merchant_detail_audit"
                android:layout_alignParentBottom="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="下一步 (1/2)"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>