<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginLeft="13dp"
        android:id="@+id/earnings_ranking_item_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/earnings_ranking_item_logo"
        app:layout_constraintTop_toTopOf="@+id/earnings_ranking_item_logo"
        android:layout_width="15dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/earnings_ranking_item_img_ranking"
            android:src="@mipmap/earningsranking_list_item_img1"
            android:layout_width="15dp"
            android:layout_height="25dp"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/earnings_ranking_item_tv_ranking"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@mipmap/earningsranking_list_item_img3"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



    <ImageView
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toRightOf="@+id/earnings_ranking_item_line"
        android:id="@+id/earnings_ranking_item_logo"
        android:src="@mipmap/earningsranking_list_item_img2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/earnings_ranking_item_name"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/earnings_ranking_item_logo"
        app:layout_constraintBottom_toBottomOf="@+id/earnings_ranking_item_logo"
        app:layout_constraintTop_toTopOf="@+id/earnings_ranking_item_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李**"
        android:textColor="#ff666666"
        android:textSize="13sp"
        />


    <TextView
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/earnings_ranking_item_logo"
        app:layout_constraintTop_toTopOf="@+id/earnings_ranking_item_logo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累计收益￥1024.00"
        android:textColor="#ff999999"
        android:textSize="13sp"
        />

    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/earnings_ranking_item_logo"
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>